<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:layout_gravity="center">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:padding="10dp"
		android:gravity="center">

		<TextView
			android:layout_height="wrap_content"
			android:text="检查环境配置"
			android:layout_width="wrap_content"/>

		<TextView
			android:layout_height="1dp"
			android:text="Text"
			android:layout_width="match_parent"
			android:background="#FFFFFF"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/mainsetting_checken"
			android:gravity="center"
			android:textColor="#FC0E00"/>

		<Switch
			android:id="@+id/mainsettingSwitch4"
			android:layout_width="match_parent"
			android:text="启用模块"
			android:layout_height="wrap_content"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="软件图标设置"
			android:layout_width="wrap_content"/>

		<TextView
			android:layout_height="1dp"
			android:text="Text"
			android:layout_width="match_parent"
			android:background="#FFFFFF"/>

		<Switch
			android:layout_height="wrap_content"
			android:text="隐藏应用图标"
			android:layout_width="match_parent"
			android:id="@+id/mainsetting_hideicon"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="主题设置"
			android:layout_width="wrap_content"/>

		<TextView
			android:layout_height="1dp"
			android:text="Text"
			android:layout_width="match_parent"
			android:background="#FFFFFF"/>

		<Switch
			android:layout_height="wrap_content"
			android:text="切换应用主题"
			android:layout_width="match_parent"
			android:id="@+id/mainsettingSwitch3"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="其他设置"
			android:layout_width="wrap_content"/>

		<TextView
			android:layout_height="1dp"
			android:text="Text"
			android:layout_width="match_parent"
			android:background="#FFFEFF"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:layout_height="wrap_content"
				android:text="显示时间:"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content"
				android:layout_gravity="center"/>

			<SeekBar
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/mainsettingSeekBar1"/>

		</LinearLayout>

		<TextView
			android:layout_height="wrap_content"
			android:text="显示时间将会随着字符长短而增减！"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:layout_gravity="left"/>

		<Switch
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="开启字符白名单"
			android:id="@+id/mainsettingSwitch5"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:id="@+id/mainsettingLinearLayout1">

			<TextView
				android:layout_height="wrap_content"
				android:text="白名单字符:"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content"
				android:layout_gravity="center"/>

			<EditText
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_gravity="center"
				android:id="@+id/mainsettingEditText2"
				android:layout_weight="1.0"
				android:hint="不填则使用默认白名单！"/>

		</LinearLayout>

		<TextView
			android:layout_height="wrap_content"
			android:text="翻译内容含有上面字符的才会翻译！(支持正则)"
			android:layout_width="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/mainsettingTextView9"
			android:layout_gravity="left"/>

		<Switch
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="开启字符黑名单"
			android:id="@+id/mainsettingSwitch6"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:id="@+id/mainsettingLinearLayout2">

			<TextView
				android:layout_height="wrap_content"
				android:text="黑名单字符:"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content"
				android:layout_gravity="center"/>

			<EditText
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="1.0"
				android:hint="不填则使用默认黑名单！"
				android:id="@+id/mainsettingEditText3"/>

		</LinearLayout>

		<TextView
			android:layout_height="wrap_content"
			android:text="翻译内容不含有上面字符的才会翻译！(支持正则)"
			android:layout_width="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_gravity="left"
			android:id="@+id/mainsettingTextView10"/>

		<Button
			android:layout_height="wrap_content"
			android:text="保存配置"
			android:layout_width="match_parent"
			android:id="@+id/mainsettingButton7"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="开发者"
			android:layout_width="wrap_content"/>

		<TextView
			android:layout_height="1dp"
			android:text="Text"
			android:layout_width="match_parent"
			android:background="#FFFEFF"/>

		<Switch
			android:layout_height="wrap_content"
			android:text="开启调试模式"
			android:layout_width="match_parent"
			android:id="@+id/mainsettingSwitch2"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_gravity="center">

			<Button
				android:layout_height="wrap_content"
				android:text="查看日志(需root)"
				android:layout_width="wrap_content"
				android:layout_gravity="center"
				android:id="@+id/mainsettingButton5"
				android:layout_weight="1.0"/>

			<Button
				android:layout_height="wrap_content"
				android:text="加入测试群"
				android:layout_width="wrap_content"
				android:id="@+id/mainsettingButton4"
				android:layout_gravity="center"
				android:gravity="center"
				android:layout_weight="1.0"/>

		</LinearLayout>

		<TextView
			android:layout_height="wrap_content"
			android:text="软件说明"
			android:layout_width="wrap_content"
			android:id="@+id/mainsettingTextView5"
			android:layout_gravity="center"/>

		<TextView
			android:layout_height="1dp"
			android:text="Text"
			android:layout_width="match_parent"
			android:layout_below="@id/mainsettingTextView5"
			android:background="#FFFEFF"
			android:id="@+id/mainsettingTextView6"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_below="@id/mainsettingTextView6"
			android:id="@+id/mainsettingTextView_apkDescription"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<Button
				android:layout_height="wrap_content"
				android:text="捐赠(支付宝)"
				android:layout_width="wrap_content"
				android:id="@+id/mainsettingButton1"
				android:layout_weight="1.0"/>

			<Button
				android:layout_height="wrap_content"
				android:text="评分(酷安)"
				android:layout_width="wrap_content"
				android:id="@+id/mainsettingButton2"
				android:layout_weight="1.0"/>

		</LinearLayout>

	</LinearLayout>

</ScrollView>

